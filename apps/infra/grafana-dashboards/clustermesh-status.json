{
  "annotations": {
    "list": [
      {
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Deployments",
        "type": "dashboard"
      }
    ]
  },
  "description": "Cilium ClusterMesh Health and Cross-Cluster Connectivity",
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "title": "Connected Clusters",
      "description": "Number of remote clusters connected via ClusterMesh",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(cilium_clustermesh_remote_clusters{cluster=\"$cluster\"})",
          "legendFormat": "Connected"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "colorMode": "background"
      }
    },
    {
      "title": "ClusterMesh API Server Health",
      "description": "Ready status of ClusterMesh API server pods per cluster",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "sum(kube_pod_status_ready{namespace=\"kube-system\", pod=~\"clustermesh-apiserver.*\", condition=\"true\", cluster=\"$cluster\"}) by (cluster)",
          "legendFormat": "{{cluster}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "colorMode": "background"
      }
    },
    {
      "title": "Cross-Cluster Service Count",
      "description": "Number of global services discovered via ClusterMesh",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(cilium_clustermesh_global_services{cluster=\"$cluster\"}) by (cluster)",
          "legendFormat": "{{cluster}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "yellow", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "colorMode": "value"
      }
    },
    {
      "title": "Identity Sync Status",
      "description": "Number of remote identities synced from peer clusters",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "sum(cilium_clustermesh_remote_cluster_identities{cluster=\"$cluster\"}) by (source_cluster)",
          "legendFormat": "from {{source_cluster}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "yellow", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "colorMode": "value"
      }
    },
    {
      "title": "Cross-Cluster Flow Rate",
      "description": "Rate of Hubble flows between clusters (forwarded, dropped, error)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "targets": [
        {
          "expr": "sum(rate(hubble_flows_processed_total{cluster=\"$cluster\", source_cluster!=\"\", destination_cluster!=\"\", source_cluster!=destination_cluster}[$__rate_interval])) by (verdict)",
          "legendFormat": "{{verdict}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 15,
            "stacking": { "mode": "none" }
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "FORWARDED" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "DROPPED" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "ERROR" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          }
        ]
      }
    },
    {
      "title": "ClusterMesh Latency (P50 / P95 / P99)",
      "description": "Latency of ClusterMesh API server requests",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(cilium_clustermesh_apiserver_request_duration_seconds_bucket{cluster=\"$cluster\"}[$__rate_interval])) by (le))",
          "legendFormat": "P50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(cilium_clustermesh_apiserver_request_duration_seconds_bucket{cluster=\"$cluster\"}[$__rate_interval])) by (le))",
          "legendFormat": "P95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(cilium_clustermesh_apiserver_request_duration_seconds_bucket{cluster=\"$cluster\"}[$__rate_interval])) by (le))",
          "legendFormat": "P99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 0.5 }
            ]
          }
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "cluster",
        "type": "query",
        "query": "label_values(cilium_clustermesh_remote_clusters, cluster)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": {
          "selected": true,
          "text": "All",
          "value": "$__all"
        }
      },
      {
        "name": "namespace",
        "type": "query",
        "query": "label_values(kube_pod_info{cluster=\"$cluster\"}, namespace)",
        "refresh": 2,
        "includeAll": true,
        "multi": false,
        "current": {
          "selected": false,
          "text": "kube-system",
          "value": "kube-system"
        }
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "refresh": "30s",
  "schemaVersion": 39,
  "title": "ClusterMesh Status",
  "uid": "clustermesh-status"
}
