{
  "annotations": {
    "list": [
      {
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Deployments",
        "type": "dashboard"
      }
    ]
  },
  "description": "Standard Go Application Dashboard - RED Metrics (Rate, Errors, Duration)",
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "title": "Request Rate (req/s)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{namespace=\"$namespace\", pod=~\"$app.*\"}[$__rate_interval])) by (method, path)",
          "legendFormat": "{{method}} {{path}}"
        }
      ]
    },
    {
      "title": "Error Rate (%)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{namespace=\"$namespace\", pod=~\"$app.*\", code=~\"5..\"}[$__rate_interval])) / sum(rate(http_requests_total{namespace=\"$namespace\", pod=~\"$app.*\"}[$__rate_interval])) * 100",
          "legendFormat": "Error %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },
    {
      "title": "Request Duration (P50/P95/P99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{namespace=\"$namespace\", pod=~\"$app.*\"}[$__rate_interval])) by (le))",
          "legendFormat": "P50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{namespace=\"$namespace\", pod=~\"$app.*\"}[$__rate_interval])) by (le))",
          "legendFormat": "P95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{namespace=\"$namespace\", pod=~\"$app.*\"}[$__rate_interval])) by (le))",
          "legendFormat": "P99"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\", pod=~\"$app.*\", container!=\"\"}[$__rate_interval])) by (pod)",
          "legendFormat": "{{pod}}"
        },
        {
          "expr": "sum(kube_pod_container_resource_limits{namespace=\"$namespace\", pod=~\"$app.*\", resource=\"cpu\"}) by (pod)",
          "legendFormat": "{{pod}} limit"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "short" } }
    },
    {
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 },
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{namespace=\"$namespace\", pod=~\"$app.*\", container!=\"\"}) by (pod)",
          "legendFormat": "{{pod}}"
        },
        {
          "expr": "sum(kube_pod_container_resource_limits{namespace=\"$namespace\", pod=~\"$app.*\", resource=\"memory\"}) by (pod)",
          "legendFormat": "{{pod}} limit"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" } }
    },
    {
      "title": "Go Runtime - Goroutines",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 },
      "targets": [
        {
          "expr": "go_goroutines{namespace=\"$namespace\", pod=~\"$app.*\"}",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "title": "Go Runtime - GC Duration",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "rate(go_gc_duration_seconds_sum{namespace=\"$namespace\", pod=~\"$app.*\"}[$__rate_interval])",
          "legendFormat": "{{pod}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "title": "Pod Restarts",
      "type": "stat",
      "gridPos": { "h": 8, "w": 4, "x": 8, "y": 16 },
      "targets": [
        {
          "expr": "sum(kube_pod_container_status_restarts_total{namespace=\"$namespace\", pod=~\"$app.*\"})",
          "legendFormat": "Restarts"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },
    {
      "title": "Ready Pods",
      "type": "stat",
      "gridPos": { "h": 8, "w": 4, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "sum(kube_pod_status_ready{namespace=\"$namespace\", pod=~\"$app.*\", condition=\"true\"})",
          "legendFormat": "Ready"
        }
      ]
    },
    {
      "title": "Network I/O",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
      "targets": [
        {
          "expr": "sum(rate(container_network_receive_bytes_total{namespace=\"$namespace\", pod=~\"$app.*\"}[$__rate_interval])) by (pod)",
          "legendFormat": "{{pod}} rx"
        },
        {
          "expr": "-sum(rate(container_network_transmit_bytes_total{namespace=\"$namespace\", pod=~\"$app.*\"}[$__rate_interval])) by (pod)",
          "legendFormat": "{{pod}} tx"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps" } }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "query": "label_values(kube_pod_info, namespace)",
        "refresh": 2
      },
      {
        "name": "app",
        "type": "query",
        "query": "label_values(kube_pod_info{namespace=\"$namespace\"}, pod)",
        "regex": "/^(.*?)-[a-z0-9]+-[a-z0-9]+$/",
        "refresh": 2
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "refresh": "30s",
  "schemaVersion": 39,
  "title": "Go Application - RED Metrics",
  "uid": "go-app-red-metrics"
}
